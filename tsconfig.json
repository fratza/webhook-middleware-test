{
    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "lib": ["ES2017", "DOM"],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "resolveJsonModule": true,
        "typeRoots": ["./node_modules/@types"],
        "paths": {
            "*": ["*"]
        },
        "moduleResolution": "node"
    },
    "include": ["src/**/*"], // Include all files in the src folder
    "exclude": ["node_modules", "dist"] // Exclude node_modules and dist folder
}
